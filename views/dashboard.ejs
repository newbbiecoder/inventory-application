<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <header>
            <div class="logo">
                <!-- <img src="" alt=""> -->
                <p>FreshStock</p>
            </div>
            <div class="user">
                <!-- <img src="" alt=""> -->
                <p>User</p>
            </div>
        </header>
        <div>
            <nav>
                <div class="dashboard">
                    <!-- <img src="" alt=""> -->
                    <p>Dashboard</p>
                </div>
                <div class="categories">
                    <ul>
                        <li>Vegetables</li>
                        <li>Fruits</li>
                        <li>Dairy</li>
                        <li>Grains</li>
                        <li>Snacks</li>
                        <li>Beverages</li>
                    </ul>
                </div>
            </nav>
            <main>
                <section class="item-info">
                    <h2>Dashboard</h2>
                    <div>
                        <article class="total-categories">
                            <div>
                                <p>Total Categories</p>
                                <!-- <img src="" alt=""> -->
